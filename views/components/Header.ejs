<header class="shadow-sm relative flex justify-between items-center bg-white duration-500 dark:bg-neutral-900 px-4 md:px-6 py-4">
	<a href="/" class="flex items-center gap-2">
		<img src="/image/logo.png" class="h-6 w-6 flex dark:hidden" alt="logo" />
		<img src="/image/logo-dark.png" class="h-6 w-6 hidden dark:flex" alt="logo-dark" />
		<h1 class="font-bold text-xl dark:text-gray-50 text-neutral-900">
			HTM<span class="text-3xl text-[#00b0ea]">X</span>
		</h1>
	</a>
	<div id="menu" class="hidden md:flex flex-col md:flex-row absolute md:relative top-full left-0 md:top-auto md:left-auto bg-white md:bg-transparent w-full md:w-auto p-4 md:p-0 shadow-md md:shadow-none z-50">
		<nav class="flex flex-col md:flex-row items-start md:items-center gap-4">
			<a href="/" class="nav-link hover:underline duration-300">Home</a>
			<a href="/terkini" class="nav-link hover:underline duration-300">Terkini</a>
			<a href="/terpopuler" class="nav-link hover:underline duration-300">Terpopuler</a>
			<a href="/viral" class="nav-link hover:underline duration-300">Viral</a>
			<a href="/pilihan" class="nav-link hover:underline duration-300">Pilihan</a>
		</nav>
	</div>
	<div class="flex items-center gap-2">
		<button id="openSearchModal" class="transition hover:scale-105 duration-300">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-5">
				<path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
			</svg>
		</button>
		<%- include('ToggleDark') %>
		<button id="menuToggle" class="md:hidden focus:outline-none">
			<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 hover:text-[#00b0ea] duration-300">
			  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25H12" />
			</svg>
		</button>
	</div>
	<div class="absolute bottom-0 left-0 h-[1px] w-full bg-gradient-to-r from-[#00b0ea]/20 via-[#00b0ea] to-[#00b0ea]/20"></div>
</header>

<script>
	document.getElementById('menuToggle').addEventListener('click', function() {
		document.getElementById('menu').classList.toggle('hidden');
	});
</script>
